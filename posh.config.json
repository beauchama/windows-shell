{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "palette": {
      "background": "#000000",
      "foreground": "#0ff",
      "dotnet": "#9d56f3",
      "no-change": "#81ff91",
      "change": "#ff9248",
      "both": "#ff4500",
      "ahead": "#008fe2",
      "behind": "#e2d300",
      "spotify": "#1BD760"
    },
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "path",
            "template": "{{ .Path }} ",
            "style": "plain",
            "background": "p:background",
            "foreground": "p:foreground",
            "properties": {
              "style": "full",
              "folder_separator_icon": " \uf554 "
            }
          },
          {
            "type": "dotnet",
            "template": "\ue70c {{ .Major }}.{{ .Minor }}.{{ .Patch }} ",
            "style": "plain",
            "background": "p:background",
            "foreground": "p:dotnet",
            "properties": {
              "fetch_version": true,
              "display_mode": "always"
            }
          },
          {
            "type": "git",
            "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}",
            "style": "plain",
            "background": "p:background",
            "foreground": "p:no-change",
            "foreground_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}p:change{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:both{{ end }}",
              "{{ if gt .Ahead 0 }}p:ahead{{ end }}",
              "{{ if gt .Behind 0 }}p:behind{{ end }}"
            ],
            "properties": {
              "branch_max_length": 25,
              "fetch_stash_count": true,
              "fetch_status": true
            }
          },
          {
            "type": "spotify",
            "template": " {{ .Icon }} {{ .Artist }} - {{ .Track }}",
            "style": "plain",
            "background": "p:background",
            "foreground": "p:spotify",
            "properties": {
              "playing_icon": "\uf001"
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "background": "transparent",
            "foreground": "#81ff91",
            "foreground_templates": [
              "{{if gt .Code 0}}#ff3030{{end}}"
            ],
            "properties": {
              "always_enabled": true
            },
            "style": "plain",
            "template": "\u276f",
            "type": "exit"
          }
        ]
      }
    ]
  }